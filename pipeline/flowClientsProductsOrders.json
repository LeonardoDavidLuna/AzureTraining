				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"additionalColumns": [
							{
								"name": "SaleID",
								"value": "0"
							},
							{
								"name": "TotalSale",
								"value": "2000"
							}
